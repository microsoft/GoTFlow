{
  "output_dir_path": "${GF_ROOT}/data/workflows/Rewriting/output",
  "input_parameters": [
  ],
  "flow_items": [
    {
      "id": "data_splitter",
      "description": "split the data",
      "type": "splitter",
      "input_parameters": [
        {
          "name": "source_file",
          "type": "file",
          "file_path": "${GF_ROOT}/data/workflows/Rewriting/input/raw_data/original_content.txt"
        },
        {
          "name": "max_length",
          "type": "int",
          "value": 1000
        }
      ],
      "output": [
        {
          "type": "file_list",
          "name": "trans_splits/splitted_original_content_${i}.txt"
        }
      ],
      "next_nodes": [
        "rewrite_splits"
      ]
    },
    {
      "id": "rewrite_splits",
      "description": "rewrite splitted data",
      "type": "repeat_executor",
      "input_parameters": [
        {
          "name": "prompt_template_file_path",
          "type": "prompt_template",
          "file_path": "${GF_ROOT}/data/workflows/Rewriting/prompts/translate_en2cn.txt"
        },
        {
          "name": "content",
          "type": "splitted_prompt_text",
          "file_path": "${GF_ROOT}/data/workflows/Rewriting/output/trans_splits/splitted_original_content_${i}.txt"
        }
      ],
      "output": [
        {
          "type": "file_list",
          "name": "translation/translation_${i}.txt"
        }
      ],
      "next_nodes": [
        "merge_rewritten_data"
      ]
    },
    {
      "id": "merge_rewritten_data",
      "description": "merge rewritten data",
      "type": "merger",
      "input_parameters": [
        {
          "name": "rewritten_data",
          "type": "file_list",
          "file_path": "${GF_ROOT}/data/workflows/Rewriting/output/translation/translation_${i}.txt"
        }
      ],
      "output": [
        {
          "type": "file",
          "name": "translated_content.txt"
        }
      ],
      "next_nodes": [
      ]
    }
  ]
}