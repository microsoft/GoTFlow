    }
  ],
  "flow_items": [
    {
      "id": "data_splitter",
      "description": "split the data",
      "type": "splitter",
      "disabled": true,
      "input_parameters": [
        {
          "name": "source_file",
          "type": "file",
          "file_path": "${GF_ROOT}/data/workflows/TechNews/input/technews_outline_flashstyle.txt"
        },
        {
          "name": "max_length",
          "type": "int",
          "value": 0
        }
      ],
      "output": [
        {
          "type": "file_list",
          "name": "splits/technews_outline_flashstyle_${i}.txt"
        }
      ],
      "next_nodes": [
        "news_writing"
      ]
    },
    {
      "id": "news_writing",
      "description": "",
      "type": "repeat_executor",
      "disabled": false,
      "input_parameters": [
        {
          "name": "prompt_template_file_path",
          "type": "prompt_template",
          "file_path": "${GF_ROOT}/data/workflows/TechNews/prompts/news_writing.txt"
