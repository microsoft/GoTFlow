        {
        "name": "introduction_company",
        "type": "prompt_text",
        "file_path": "${GF_ROOT}/data/workflows/TechNews/input/introduction_company.txt"
        },
        {
        "name": "introduction_product",
        "type": "prompt_text",
        "file_path": "${GF_ROOT}/data/workflows/TechNews/input/introduction_product.txt"
        },
        {
        "name": "news_event",
        "type": "prompt_text",
        "file_path": "${GF_ROOT}/data/workflows/TechNews/input/news_event.txt"
