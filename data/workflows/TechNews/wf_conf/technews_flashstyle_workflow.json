      "next_nodes": [
        "merge_rewrite_paragraphs"
      ]
    },
    {
      "id": "merge_rewrite_paragraphs",
      "description": "merge review paragraphs",
      "type": "merger",
      "disabled": false,
      "input_parameters": [
        {
          "name": "rewritten_data",
          "type": "file_list",
          "file_path": "${GF_ROOT}/data/workflows/TechNews/output/rewrite_paragraphs/technews_flashstyle_rewrite_${i}.txt"
        }
      ],
      "output": [
        {
          "type": "file",
          "name": "TechNews_flashstyle_rewrite_2.txt"
        }
      ],
      "next_nodes": [
      ]
    }
