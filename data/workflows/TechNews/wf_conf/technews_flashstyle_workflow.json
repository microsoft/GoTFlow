        {
          "name": "news_outline",
          "type": "prompt_text",
          "file_path": "${GF_ROOT}/data/workflows/TechNews/input/technews_outline_flashstyle.txt"
        },
        {
          "name": "content",
          "type": "splitted_prompt_text",
          "file_path": "${GF_ROOT}/data/workflows/TechNews/output/splits/technews_outline_flashstyle_${i}.txt"
        },
        {
        "name": "input_parameter_file_path",
        "type": "prompt_parameters"
        }
      ],
      "output": [
        {
          "type": "file_list",
          "name": "paragraphs/technews_flashstyle_${i}.txt"
        }
      ],
      "next_nodes": [
        "merge_paragraphs"
      ]
    },
    {
      "id": "merge_paragraphs",
      "description": "merge review paragraphs",
      "type": "merger",
      "disabled": false,
      "input_parameters": [
        {
          "name": "rewritten_data",
          "type": "file_list",
          "file_path": "${GF_ROOT}/data/workflows/TechNews/output/paragraphs/technews_flashstyle_${i}.txt"
        }
      ],
      "output": [
        {
          "type": "file",
          "name": "TechNews_flashstyle_2.txt"
        }
      ],
      "next_nodes": [
        "rewrite_technews"
      ]
    },
    {
      "id": "rewrite_technews",
      "description": "",
      "type": "repeat_executor",
      "disabled": false,
      "input_parameters": [
        {
          "name": "prompt_template_file_path",
          "type": "prompt_template",
          "file_path": "${GF_ROOT}/data/workflows/TechNews/prompts/rewrite_technews.txt"
        },
        {
        "name": "content",
        "type": "splitted_prompt_text",
        "file_path": "${GF_ROOT}/data/workflows/TechNews/output/paragraphs/technews_flashstyle_${i}.txt"
        }
      ],
      "output": [
        {
           "type": "file_list",
          "name": "rewrite_paragraphs/technews_flashstyle_rewrite_${i}.txt"
        }
